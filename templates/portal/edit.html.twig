{% extends 'base.html.twig' %}

{% block title %} Edit Page {% endblock %}

{% block content %}

<div class="container-fluid">
    <h3 class="text-dark mb-4">Edit Page</h3>

    <div class="card shadow mb-5">
        <div class="card-header py-3">
            <p class="text-primary m-0 fw-bold">Edit Page</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-9 col-lg-9">
                    <form method="POST" action="{{ path('update_page', {id: portal.id}) }}">
                        <div class="mb-3">
                            <label class="form-label" for="country_code">Country Code (ISO Alpha-2)<br></label>
                            <input class="form-control" type="text" id="country_code-1" name="country_code" readonly="" disabled="" value="{{portal.countryCode}}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="page_path">Page Path<br></label>
                            <input class="form-control" type="text" id="page_path-1" name="page_path" value="{{portal.pagePath}}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="content"><strong>Content</strong><br></label>
                            {% if is_granted('ROLE_ADMIN') %}
                                <textarea class="form-control" id="content" rows="10" name="content">{{portal.content}}</textarea>
                            {% else %}
                                <textarea class="form-control" id="content" rows="10" name="content" disabled>{{portal.content}}</textarea>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            {% if is_granted('ROLE_ADMIN') %}
                                <button class="btn btn-primary btn-sm" type="submit">Save</button>
                            {% else %}
                                <button class="btn btn-primary btn-sm disabled" type="submit" disabled>Save</button>
                            {% endif %}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
